<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StandardScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_activity_settings"
    android:orientation="vertical"
    tools:context="com.practicum.playlistmaker.library.ui.LibraryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextHeaderSettings"
            android:text="@string/main_button_2" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_activity_settings"
        app:tabIndicatorColor="@color/text_color"
        app:tabIndicatorFullWidth="true"
        app:tabMode="fixed"
        app:tabTextColor="@color/text_color" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>