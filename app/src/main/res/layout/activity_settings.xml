<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StandardScreen"
    android:padding="@dimen/four_space"
    android:background="@color/background_activity_settings"
    tools:context=".presentation.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/six_space" >

        <ImageView
            android:id="@+id/arrow_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back" />

        <TextView
            style="@style/TextHeaderSettings"
            android:text="@string/main_button_3" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        style="@style/MenuSettings"
        android:text="@string/setting1_dark_theme" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        android:layout_gravity="end"
        android:layout_width="@dimen/fourteen_space"
        android:layout_height="@dimen/fourteen_space"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/MenuSettings"
            android:text="@string/setting2_share_app" />

        <ImageView
            android:id="@+id/share"
            style="@style/IconSettings"
            android:src="@drawable/share" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/MenuSettings"
            android:text="@string/setting3_support" />

        <ImageView
            android:id="@+id/support"
            style="@style/IconSettings"
            android:src="@drawable/support" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/MenuSettings"
            android:text="@string/setting4_user_agreement" />

        <ImageView
            android:id="@+id/user_agreement"
            style="@style/IconSettings"
            android:src="@drawable/arrow_forward" />

    </FrameLayout>

</LinearLayout>