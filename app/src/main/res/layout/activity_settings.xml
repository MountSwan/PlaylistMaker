<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StandardScreen"
    android:background="?attr/colorPrimary"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/big_space">

        <ImageView
            android:id="@+id/arrow_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_button_3"
            android:textColor="?attr/colorOnPrimary"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="@dimen/big_text"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/MenuSettings"
            android:text="@string/setting1_dark_theme" />

        <Switch
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="end" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/MenuSettings"
            android:text="@string/setting2_share_app" />

        <ImageView
            style="@style/IconSettings"
            android:src="@drawable/share" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/MenuSettings"
            android:text="@string/setting3_support" />

        <ImageView
            style="@style/IconSettings"
            android:src="@drawable/support" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/MenuSettings"
            android:text="@string/setting4_user_agreement" />

        <ImageView
            style="@style/IconSettings"
            android:src="@drawable/arrow_forward" />

    </FrameLayout>

</LinearLayout>