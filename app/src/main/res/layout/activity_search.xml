<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StandardScreen"
    android:background="@color/background_activity_settings"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/arrow_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/smallest_space"
            android:src="@drawable/arrow_back" />

        <TextView
            style="@style/TextHeaderSettings"
            android:text="@string/main_button_1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/standard_space"
        android:layout_marginEnd="@dimen/standard_space"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginBottom="@dimen/small_space"
        android:background="@drawable/layout_bg" >

        <ImageView
            android:id="@+id/searchIcon"
            style="@style/ImageEditText"
            android:layout_gravity="center"
            android:src="@drawable/search_16" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/main_button_1"
            android:maxLines="1"
            android:inputType="text"
            android:background="@null"
            android:textColor="@color/black"
            android:textColorHint="@color/text_color_hint" />

        <ImageView
            android:id="@+id/clearIcon"
            style="@style/ImageEditText"
            android:layout_gravity="center|end"
            android:src="@drawable/cancel"
            android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/standard_space"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>